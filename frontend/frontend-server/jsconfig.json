{
    "compilerOptions": {
      "resolveJsonModule": true,
      "module": "ESNext",
      "target": "ESNext",
      "moduleResolution": "Node",
      "baseUrl": ".",
      "paths": {
        "*": ["*", "src/*"]
      },
      "checkJs": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["./**/*", "./configs/*.json"]
  }